<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Home</title>
</head>

<body>
    <div class="container">
        <h1>This is index page</h1>
        <p>Welcome to my first nodejs application</p>
        <a class="btn btn-success" href="/register"> Register </a>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((student, index)=>{%>
                <tr>
                    <td><%= student.id %></td>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td><%= student.email %></td>
                    <td><%= student.address %></td>
                    <td>
                        <a class="btn btn-primary" href="/user/<%= student.id %>">View</a>
                        <a class="btn btn-warning" href="/edit/<%= student.id %>"">Edit</a>
                        <a class=" btn btn-danger" href="/remove/<%= student.id %>">Delete</a>

                    </td>
                </tr>
                <%}) %>
            </tbody>
        </table>

    </div>
    <!-- <img src="images/img.jpg" /> -->
</body>

</html>